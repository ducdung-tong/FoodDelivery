<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview_product"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/img_item"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerVertical="true"
            android:background="@drawable/trasenvang"/>

        <ImageView
            android:id="@+id/ic_love_item"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignTop="@+id/img_item"
            android:layout_marginTop="15dp"
            android:layout_marginStart="95dp"
            android:src="@drawable/ic_baseline_favorite_border_24"/>

        <TextView
            android:id="@+id/tv_item_name_merchant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/img_item"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:text="Trà Sen Vàng - Highland Big C Dĩ An, Bình Dương"
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/tv_item_name_merchant"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_baseline_stars_24"/>

            <TextView
                android:id="@+id/tv_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:layout_gravity="center"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/img_item"
            android:layout_below="@+id/tv_item_name_merchant"
            android:layout_marginStart="15dp"
            android:layout_marginTop="50dp"
            android:text="49.000 đ"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="30dp"/>

        <Spinner
            android:id="@+id/spinner_size"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tv_item_name_merchant"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="58dp"
            android:layout_marginEnd="20dp"
            android:spinnerMode="dropdown"
            android:background="@drawable/shape"/>

        <TextView
            android:id="@+id/tv_distance_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15min, 1.5km"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:layout_toEndOf="@+id/img_item"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:layout_below="@+id/tv_item_name_merchant"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/dotted"
            android:layout_below="@+id/tv_item_price"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>