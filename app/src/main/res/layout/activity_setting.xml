<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey">

    <FrameLayout
        android:id="@+id/setting_fl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <ImageButton
                android:id="@+id/st_ib_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/setting_title"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/setting_fl_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/setting_fl_title"
        android:layout_marginTop="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/setting_tv_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="@string/setting_app" />

            <LinearLayout
                android:layout_below="@id/setting_tv_app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:id="@+id/setting_ll_language">

                <TextView
                    android:layout_weight="4"
                    android:id="@+id/setting_tv_language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="@string/language"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:textColor="@color/black"/>

                <ImageButton
                    android:id="@+id/st_ib_language"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/ic_baseline_chevron_right_24" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="5dp"
                android:layout_below="@id/setting_ll_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:id="@+id/setting_ll_notification">

                <TextView
                    android:layout_weight="4"
                    android:id="@+id/setting_tv_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="@string/notification"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:textColor="@color/black"/>

                <ImageButton
                    android:layout_width="25dp"
                    android:id="@+id/st_ib_notification"
                    android:layout_height="25dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/ic_baseline_chevron_right_24" />

            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/setting_fl_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/setting_fl_app"
        android:layout_marginTop="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/setting_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="@string/setting_app"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_below="@id/setting_app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:id="@+id/setting_ll_info">

                <TextView
                    android:layout_weight="4"
                    android:id="@+id/setting_tv_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="@string/account"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>

                <ImageButton
                    android:id="@+id/st_ib_account"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/ic_baseline_chevron_right_24" />

            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>
</RelativeLayout>