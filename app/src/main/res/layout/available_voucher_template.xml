<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@android:color/transparent"
    app:cardCornerRadius="15dp">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/primaryColor">

        <ImageView
            android:id="@+id/vc2_iv_image"
            android:layout_marginLeft="8dp"
            android:layout_width="64dp"
            android:layout_height="64dp" />

        <TextView
            android:id="@+id/vc2_tv_title"
            android:layout_toRightOf="@id/vc2_iv_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/dont_have_any_voucher"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/vc2_tv_date"
            android:layout_toRightOf="@id/vc2_iv_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vc2_tv_title"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black" />

        <ImageButton
            android:id="@+id/vc2_ib_details"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/detail" />

        <Button
            android:id="@+id/vc2_ib_use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="@color/white"
            android:layout_below="@id/vc2_ib_details"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:text="@string/use"
            android:textSize="13sp"
            android:backgroundTint="@color/light_blue"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>